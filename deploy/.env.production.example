# Guardianes de Gaia - Production Environment Configuration
# INSTRUCTIONS: Replace ALL CHANGE_ME values with secure passwords

# Database Configuration
PROD_DB_USER=guardianes_prod
PROD_DB_PASSWORD=YOUR_SECURE_DB_PASSWORD_HERE
PROD_DB_ROOT_PASSWORD=YOUR_SECURE_ROOT_PASSWORD_HERE

# Redis Configuration  
PROD_REDIS_PASSWORD=YOUR_SECURE_REDIS_PASSWORD_HERE

# RabbitMQ Configuration
PROD_RABBITMQ_USER=guardianes_prod
PROD_RABBITMQ_PASSWORD=YOUR_SECURE_RABBITMQ_PASSWORD_HERE

# Grafana Configuration (Internal monitoring only)
PROD_GRAFANA_USER=admin
PROD_GRAFANA_PASSWORD=YOUR_SECURE_GRAFANA_PASSWORD_HERE

# Application Configuration
SPRING_PROFILES_ACTIVE=production,kubernetes
LOG_LEVEL=WARN
TZ=Europe/Madrid

# Security Configuration (CRITICAL - Must be changed)
JWT_SECRET=YOUR_SECURE_JWT_SECRET_MINIMUM_64_CHARACTERS_HERE
ENCRYPTION_KEY=YOUR_SECURE_ENCRYPTION_KEY_32_CHARS_HERE

# External Services
DUCKDNS_TOKEN=your_duckdns_token_from_duckdns_org
LETSENCRYPT_EMAIL=your-email@example.com

# SSL Configuration (auto-configured by script)
SSL_CERTIFICATE_PATH=/etc/letsencrypt/live/guardianes.duckdns.org/fullchain.pem
SSL_PRIVATE_KEY_PATH=/etc/letsencrypt/live/guardianes.duckdns.org/privkey.pem

# Resource Limits (Production Optimized)
JAVA_OPTS=-Xmx2048m -Xms1024m -XX:+UseG1GC -XX:MaxGCPauseMillis=200
MYSQL_BUFFER_POOL_SIZE=1G
REDIS_MEMORY_LIMIT=1G

# Security Settings
TOGGLZ_CONSOLE_SECURED=true
METRICS_ENABLED=true
HEALTH_CHECKS_ENABLED=true